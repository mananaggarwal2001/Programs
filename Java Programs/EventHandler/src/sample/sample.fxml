<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.CheckBox?>
<GridPane fx:controller="sample.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">

    <TextField fx:id="nameFeild" GridPane.rowIndex="0" GridPane.columnIndex="0"
               onKeyReleased="#Buttonhandlertext"/>
    <Button fx:id="hellobutton" text="MY FIRST EVENT HANDLER" GridPane.rowIndex="1" GridPane.columnIndex="0"
            onAction="#onButtonAction" />
    <Button fx:id="Byebutton" text="SECOND BUTTON" GridPane.rowIndex="2" GridPane.columnIndex="0"
        onAction="#onButtonAction"/>
    <CheckBox fx:id="mycheckbox" text="Clear the Feild after saying hello or goodbye" GridPane.rowIndex="2" GridPane.columnIndex="1" indeterminate="true"
    GridPane.columnSpan="2" onAction="#handleCheck"/>
    <Label fx:id="ourlabel" text="Label 1" GridPane.columnIndex="1" GridPane.rowIndex="3"/>


</GridPane>