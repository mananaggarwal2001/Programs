<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ProgressBar?>
<GridPane fx:controller="sample.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">

    <Button text="Get Employee name" onAction="#ButtonPressed" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <ListView fx:id="listView" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <ProgressBar fx:id="progressBar" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    <Label fx:id="progressLabel" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
</GridPane>